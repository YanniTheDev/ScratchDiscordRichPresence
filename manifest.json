{
    "manifest_version": 2,
    "name": "Scratch Discord Rich Presence",
    "description": "Update your Discord status with a rich presence whenever you are on https://scratch.mit.edu",
    "version": "1.0",
    "icons": {
        "16": "/Images/icon_16.png",
        "48": "/Images/icon_48.png",
        "128": "/Images/icon_128.png"
    },
    "page_action": {
        "default_action": {
            "16": "/Images/icon_16.png",
            "48": "/Images/icon_48.png",
            "128": "/Images/icon_128.png"
        }
    },
    "content_scripts": [{
        "matches": ["https://scratch.mit.edu/projects/*/editor"],
        "js": ["main.js"]
    }]
}